<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patui.cognitive.CognitiveFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dashb">

        <Button
            android:id="@+id/btnSudoku"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginTop="300dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_background"
            android:layout_centerHorizontal="true"
            android:text="Sudoku"
            android:drawableLeft="@drawable/sudo"
            android:drawablePadding="10dp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnMemory"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginTop="400dp"
            android:textSize="29sp"
            android:textColor="@color/black"
            android:background="@drawable/custom_button_background"
            android:layout_centerHorizontal="true"
            android:text="Memory GAME"
            android:drawableLeft="@drawable/match2"
            android:drawablePadding="10dp"
            tools:ignore="HardcodedText" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>